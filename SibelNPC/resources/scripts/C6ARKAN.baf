IF
  Global("Iasibelsays","LOCALS",0)
THEN
  RESPONSE #100
    SetGlobal("Iasibelsays","LOCALS",1)
    EquipMostDamagingMelee()
END

IF
  AreaCheck("AR0809")
  Global("C6BodhiFight","AR0809",1)
  !GlobalTimerNotExpired("Iasbackstab","LOCALS")
  !GlobalTimerNotExpired("Iaspell","LOCALS")
  GlobalLT("Iasibeltalks","LOCALS",5)
  OR(3)
    !HasItemEquiped("S!skel",NearestEnemyOf(Myself))
    !HasItemEquiped("S!skel",SecondNearestEnemyOf(Myself))
    !HasItemEquiped("S!skel",ThirdNearestEnemyOf(Myself))
THEN
  RESPONSE #100
    IncrementGlobal("Iasibeltalks","LOCALS",1)
    SetGlobalTimer("Iasbackstab","LOCALS",7)
    SetGlobalTimer("Iaspell","LOCALS",6)
    ForceSpell(Myself,ROGUE_ASSASINATION)
END

